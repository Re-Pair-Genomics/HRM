{
    "extends": [
        "next",
        "prettier",
        "plugin:@typescript-eslint/recommended",
        "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": ["@typescript-eslint"],
    "root": true,
    "rules": {
        "react/react-in-jsx-scope": "off",
        "no-undef": "off",
        "@typescript-eslint/no-unused-vars": ["error"]
    }
}
